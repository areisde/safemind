# Example terraform.tfvars for Azure MLOps deployment
# Copy this file to terraform.tfvars and fill in your values

# ────────────────────────────────────────────────
# Core Configuration
# ────────────────────────────────────────────────
location    = "switzerlandnorth"  # or your preferred region
environment = "dev"

# ────────────────────────────────────────────────
# AKS Configuration
# ────────────────────────────────────────────────
node_count = 2
node_size  = "Standard_B2s"

# ────────────────────────────────────────────────
# Feature Toggles
# ────────────────────────────────────────────────
enable_llm           = true   # Enable Azure OpenAI deployment
enable_frontdoor     = false  # Enable Azure Front Door (external access)
enable_observability = false  # Enable monitoring stack

# ────────────────────────────────────────────────
# Front Door Configuration (if enabled)
# ────────────────────────────────────────────────
frontdoor_origin_hostname = "your-domain.com"  # Change to your domain

# ────────────────────────────────────────────────
# Azure OpenAI Configuration (if LLM enabled)
# ────────────────────────────────────────────────
gpt4o_deployment_name = "gpt-4o"
gpt4o_version        = "2024-08-06"
gpt4o_capacity       = 10  # 10K tokens per minute
